{
  "index": {
    "analysis": {
      "filter": {
        "pinyin_simple_filter": {
          "type" : "pinyin",
          "keep_separate_first_letter" : false,
          "keep_first_letter" : true,
          "keep_full_pinyin" : true,
          "keep_joined_full_pinyin" : true,
          "limit_first_letter_length" : 10
        }
      },
      "char_filter": {
        "tsconvert": {
          "type": "stconvert",
          "convert_type": "t2s"
        }
      },
      "analyzer": {
        "ikSearchAnalyzer": {
          "type": "custom",
          "tokenizer": "ik_max_word",
          "char_filter": [
            "tsconvert"
          ]
        },
        "pinyinSimpleIndexAnalyzer": {
          "tokenizer": "keyword",
          "filter": [
            "pinyin_simple_filter",
            "lowercase"
          ]
        }
      }
    }
  }
}
